@model Domains.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Delete Category </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Categories List</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Category</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <h4>Are you sure you want to delete this category?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CategoryName) </dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.CategoryName) </dd>

            <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CreatedBy) </dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.CreatedBy) </dd>

            <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CreatedDate) </dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.CreatedDate) </dd>

            <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.ImagePath) </dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.ImageName) </dd>

            <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.ParentCategory) </dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.ParentCategory.CategoryName) </dd>
        </dl>

        <form asp-controller="Categories" asp-action="Delete">
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </form>  
    </div>
</div>
