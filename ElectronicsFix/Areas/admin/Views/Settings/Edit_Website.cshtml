@model TbSetting
@{
    ViewData["Title"] = "Setting Website";
}

<div class="page-header">
    <h3 class="page-title"> Edit Setting </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/admin">DashBord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Setting</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4>Edit Engineer</h4>
                <hr />
                <form asp-controller="Settings" asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.ID" />
                    <input type="hidden" asp-for="@Model.Logo" />

                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" type="file" name="File" class="form-control"
                               id="uploadedImage" onchange="previewImage(event)" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mail" class="control-label"></label>
                        <input asp-for="Mail" type="email" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" pattern="^01[0,1,2,5]{1}[0-9]{8}$" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Copyright" class="control-label"></label>
                        <input asp-for="Copyright" class="form-control" />
                        <span asp-validation-for="Copyright" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea style="color:burlywood;" asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Facebook Link</label>
                        <input asp-for="Facebook_Link" class="form-control" />
                        <span asp-validation-for="Facebook_Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Googol Link</label>
                        <input asp-for="Googol_Link" class="form-control" />
                        <span asp-validation-for="Googol_Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Twitter Link</label>
                        <input asp-for="Twitter_Link" class="form-control" />
                        <span asp-validation-for="Twitter_Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Instagram Link</label>
                        <input asp-for="Instagram_Link" class="form-control" />
                        <span asp-validation-for="Instagram_Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">LinkedIn Link</label>
                        <input asp-for="LinkedIn_Link" class="form-control" />
                        <span asp-validation-for="LinkedIn_Link" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-controller="Settings" asp-action="Website" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <span id="tbImgName"></span>
                <div id="tbImgSrc">
                    <img id="imagePreview" src="~/img/@Model.Logo" style="width:100%; height:auto;" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
