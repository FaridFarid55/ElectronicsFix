@model Login

@{
    ViewData["Title"] = "Login"; // Set the title for the Login page
}
<style>
    span{
         color:red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="login-form">
                <h2 class="form-title">Login to Your Account</h2>
                <form method="post" asp-controller="Account" asp-action="Login">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div style="color:red;" asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary  mb-3">Login</button>
                    <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn  btn-primary">Create an Account</a>
                </form>
            </div>
            <br /><br />
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}