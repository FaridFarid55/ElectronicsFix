@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center" style="color: #007bff;">Login</h2>

    <form asp-action="Login" method="post" class="mt-4 p-4 border border-light rounded shadow-lg" style="background-color: #f8f9fa;">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email" required />
            <span class="text-danger">@ViewData["EmailError"]</span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password" required />
            <span class="text-danger">@ViewData["PasswordError"]</span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Register" class="text-primary">Don't have an account? Register here</a>
    </div>
</div>
